    <form method="post" action="/books/{{bookId}}/checkout" style="text-align: center;">
        <button type="submit"
            style="
                padding: 15px 40px;
                font-size: 1.3rem;
                border-radius: 12px;
                border: 3px solid #fb7c91ff;
                background-color: #ffc0cb;
