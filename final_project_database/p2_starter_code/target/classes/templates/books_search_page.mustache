{{> fragments/html_header}}
{{> fragments/top_bar}}

<div>
    <div style="max-width: 500px; margin-left: auto; margin-right: auto; 
            border: 3px solid #fb7c91ff; border-radius: 10px; 
            background-color: #ffc0cb;
            margin-top: 2em;">
        <h1 style="text-align:center; margin-top: 1em;"><strong>Search Results</strong></h1>
    </div>
</div>

<div style="margin-top: 2em;">
{{#isNoContent}}
  <p style="text-align: center;">No books found.</p>
{{/isNoContent}}

{{#books}}
  <a href="/books/{{bookId}}" class="book-link">
    <div class="book-item">
      <img src="{{image_url}}" alt="Book cover" width="80" height="120">
      <div class="book-info">
        <h3>{{title}}</h3>
        <p><strong>Author:</strong> {{authors}}</p>
        <p><em>{{genres}}</em></p>
      </div>
    </div>
  </a>
{{/books}}
</div>

{{> fragments/footer}}

<style>
.book-link {
  text-decoration: none;
  color: inherit;
}

.book-item {
  display: flex;
  align-items: center;
  gap: 20px;
  padding: 12px 20px;
  background-color: #fff7f7; /* soft lavender to match pink theme */
  border-bottom: 1px solid #ffc0cb;
  transition: background-color 0.2s ease, transform 0.1s ease;
}

.book-item:hover {
  background-color: #eeb3bdff;
  transform: translateY(-2px);
}

.book-info h3 {
  margin: 0;
}

.book-info p {
  margin: 2px 0;
  color: #444;
}
</style>
