<h2>Search Results</h2>

{{#books}}
<div class="book-result" style="margin: 10px 0;">
  <a href="/books/{{bookId}}" style="display: flex; align-items: center; text-decoration: none; color: inherit;">
    <img src="{{image_url}}" alt="{{title}}" style="height:100px; margin-right:15px;">
    <div>
      <h3>{{title}}</h3>
      <p><strong>Author:</strong> {{authors}}</p>
    </div>
  </a>
</div>
{{/books}}

{{#isNoContent}}
<p>No books found.</p>
{{/isNoContent}}
